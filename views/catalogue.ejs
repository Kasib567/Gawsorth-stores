<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catalog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="wrapper">
    <header>
      <h1>Catalog</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/catalogue">Catalogue</a>
        <a href="/search">Search</a>
        <a href="/events">Events</a>
      </nav>
    </header>

<main>
  <h2>Recently Added</h2>
  <div class="product-grid">
    <% recentItems.forEach(product => { %>
      <div class="product-card <%= product.featured ? 'featured' : '' %>">
        <% 
          let imageSrc = "/placeholder.png"; 
          if (product.image && product.image.trim() !== "") {
            const img = product.image.trim();
            if (/^https?:\/\//i.test(img)) {
              imageSrc = img;
            } else {
              imageSrc = '/uploads/' + img.replace(/^\/?uploads\//, '');
            }
          }
        %>
        <img src="<%= imageSrc %>" alt="<%= product.name %>">
        <h3><%= product.name %></h3>
        <p class="<%= product.stock > 0 ? 'in-stock' : 'out-of-stock' %>">
          <%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %>
        </p>
      </div>
    <% }) %>
  </div>

  <h2>Featured Items</h2>
  <div class="product-grid">
    <% if (featuredItems.length === 0) { %>
      <p>No featured items yet.</p>
    <% } else { %>
      <% featuredItems.forEach(product => { %>
        <div class="product-card <%= product.featured ? 'featured' : '' %>">
          <% let imageSrc = "/placeholder.png"; 
             if (product.image && product.image.trim() !== "") {
               const img = product.image.trim();
               if (/^https?:\/\//i.test(img)) {
                 imageSrc = img;
               } else {
                 imageSrc = '/uploads/' + img.replace(/^\/?uploads\//, '');
               }
             }
          %>
          <img src="<%= imageSrc %>" alt="<%= product.name %>">
          <h3><%= product.name %></h3>
          <p class="<%= product.stock > 0 ? 'in-stock' : 'out-of-stock' %>">
            <%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %>
          </p>
        </div>
      <% }) %>
    <% } %>
  </div>


  <% if (totalFeaturedPages > 1) { %>
  <div class="pagination">
    <% if (featuredPage > 1) { %>
      <a href="?featuredPage=<%= featuredPage - 1 %>" class="page-link">« Prev</a>
    <% } %>

    <% for (let i = 1; i <= totalFeaturedPages; i++) { %>
      <a href="?featuredPage=<%= i %>" class="page-link <%= i === featuredPage ? 'active' : '' %>"><%= i %></a>
    <% } %>

    <% if (featuredPage < totalFeaturedPages) { %>
      <a href="?featuredPage=<%= featuredPage + 1 %>" class="page-link">Next »</a>
    <% } %>
  </div>
<% } %>


</main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Gawsworth Stores - Est. 1980. All rights reserved.</p>
      <a href="/privacy">Privacy Policy</a> | 
      <a href="/terms">Terms of Use</a>
      </p>
    </footer>
  </div>

  <div id="cookie-banner" class="cookie-banner">
    <p>
      This website may use cookies for basic functionality and performance.
      By continuing to browse, you agree to our 
      <a href="/privacy" target="_blank">Privacy Policy</a>.
    </p>
    <button id="cookie-accept">Got it</button>
  </div>

  <script>
    // Simple cookie consent logic
    document.addEventListener("DOMContentLoaded", () => {
      const banner = document.getElementById("cookie-banner");
      const accepted = localStorage.getItem("cookieAccepted");

      if (!accepted) {
        banner.style.display = "flex";
      }

      document.getElementById("cookie-accept").addEventListener("click", () => {
        localStorage.setItem("cookieAccepted", "true");
        banner.style.display = "none";
      });
    });
  </script>

</body>
</html>
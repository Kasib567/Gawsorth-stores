<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Products</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="wrapper">
    <header>
      <h1>Search Products</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/catalogue">Catalogue</a>
        <a href="/search">Search</a>
        <a href="/events">Events</a>
      </nav>
    </header>

    <main>
      <form action="/search" method="GET">
        <input type="text" name="query" placeholder="Enter product name..." value="<%= query || '' %>" required>

        <!-- Category filter -->
        <select name="category">
          <option value="">All Categories</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.category %>" <%= category === cat.category ? "selected" : "" %>>
              <%= cat.category.charAt(0).toUpperCase() + cat.category.slice(1) %>
            </option>
          <% }) %>
        </select>


        <button type="submit">Search</button>
      </form>

      <% if (products) { %>
        <h2>Results:</h2>
        <% if (products.length === 0) { %>
          <p>No products found.</p>
        <% } else { %>
          <div class="product-grid">
            <% products.forEach(product => { %>
              <div class="product-card">
                <% if (product.image) { %>
                  <img src="<%= product.image %>" alt="<%= product.name %>">
                <% } else { %>
                  <img src="/placeholder.png" alt="No image available">
                <% } %>
                <h3><%= product.name %></h3>
                <p class="<%= product.stock > 0 ? 'in-stock' : 'out-of-stock' %>">
                  <%= product.stock > 0 ? "In Stock" : "Out of Stock" %>
                </p>
              </div>
            <% }) %>
          </div>
        <% } %>
      <% } %>

      <% if (totalPages > 1) { %>
  <div class="pagination">
    <% if (page > 1) { %>
      <a href="?query=<%= query %>&category=<%= category %>&page=<%= page - 1 %>" class="page-link">« Prev</a>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <a href="?query=<%= query %>&category=<%= category %>&page=<%= i %>" class="page-link <%= i === page ? 'active' : '' %>">
        <%= i %>
      </a>
    <% } %>

    <% if (page < totalPages) { %>
      <a href="?query=<%= query %>&category=<%= category %>&page=<%= page + 1 %>" class="page-link">Next »</a>
    <% } %>
  </div>
<% } %>

    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Gawsworth Stores - Est. 1980. All rights reserved.
      <a href="/privacy">Privacy Policy</a> | 
      <a href="/terms">Terms of Use</a>
      </p>
    </footer>
  </div>

  <div id="cookie-banner" class="cookie-banner">
    <p>
      This website may use cookies for basic functionality and performance.
      By continuing to browse, you agree to our 
      <a href="/privacy" target="_blank">Privacy Policy</a>.
    </p>
    <button id="cookie-accept">Got it</button>
  </div>

  <script>
    // Simple cookie consent logic
    document.addEventListener("DOMContentLoaded", () => {
      const banner = document.getElementById("cookie-banner");
      const accepted = localStorage.getItem("cookieAccepted");

      if (!accepted) {
        banner.style.display = "flex";
      }

      document.getElementById("cookie-accept").addEventListener("click", () => {
        localStorage.setItem("cookieAccepted", "true");
        banner.style.display = "none";
      });
    });
  </script>
</body>
</html>